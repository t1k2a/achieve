<ul>
  <% comments.each do |comment| %>
    <% unless comment.id.nil? %>
      <li>
        <!--ユーザーのIDを確認する用にidを指定-->
        <p class="left"><%= comment.user.id %>の<%= comment.user.name %>さんがコメントしました。</p> 
        <p class="left"><%= comment.content %></p>
        <% if current_user.name == comment.user.name %>
          <p class="right">
            <%= link_to '', edit_blog_comment_path(blog, comment), class: "fa fa-pencil-square-o fa-lg" %>
            <%= link_to '削除', blog_comment_path(blog, comment), class: "fa fa-trash-o fa-lg", method: :delete, remote: true, data: { confirm: '本当に削除していいですか？' } %>
          </p>
        <% end %>
      </li>
    <% end %>
  <% end %>
</ul>